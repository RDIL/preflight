<div class="row">
  <%= render 'checklists/checklist_item_form', checklist: checklist, item: item %>
  <div class="col-xs-2 col-md-5">
    <%= link_to('', checklist_checklist_item_path(checklist, item),
                class: 'destroy-checklist-item btn btn-danger btn-sm',
                method: :delete,
                remote: true,
                :'data-disable' => true,
                :'data-comfortable-text' => 'Remove',
                :'data-abbreviated-text' => 'X'
        )
    %>
  </div>
</div>
